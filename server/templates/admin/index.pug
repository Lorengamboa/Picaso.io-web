doctype html
html(lang='en')
  head
    title Login
    style
      include ../css/materialize.min.css
      include style.css
      - var img = 'assets/img/eyes.png';
  body
    div.curve
      div.container
        div.center-align
          .row
            .col.s12.m7.offset-m2.valign-wrapper
              form(method="post")
                .card-panel
                  img(src=img, alt="eyes")
                  input.center(name='username' placeholder='username', type='text')
                  input.center(name='password' placeholder='password', type='password')
                  button.btn.btn-large.waves-effect.pink Log in